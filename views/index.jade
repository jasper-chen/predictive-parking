doctype html
html
  head
    title= 'predictive parking'
    script(src='http://maps.googleapis.com/maps/api/js?sensor=false')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.2/angular.min.js')
    link(rel="stylesheet",type="text/css",href="/style.css",media="screen")
    script(src='/app.js')

    script(src='/scripts/controllers/form.js')
    script(src='/scripts/controllers/map.js')

    script(src='/bower_components/lodash/lodash.js')
    script(src='/bower_components/angular-google-maps/dist/angular-google-maps.min.js')

  body
    div(ng-app='myApp')
      div(ng-controller="formCtrl")
        div.address
          |Address
          input(type="address", ng-model="address")
          button Submit
        div.destination
          |Destination
          input(type="destination", ng-model="destination")
          button Submit
        div.departure
          |Departure Time
          input(type="departure", ng-model="departure")
          button Submit

      div(ng-controller="MapController")
        ui-gmap-google-map(center='map.center', zoom='map.zoom')
        p test

    p driving time
          
  
      


